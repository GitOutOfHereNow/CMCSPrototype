@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>Lecturer Dashboard</h2>
                </div>
                <div class="card-body">
                    <form method="post" action="#">
                        <div class="form-group mb-3">
                            <label for="hoursWorked" class="form-label">Hours Worked:</label>
                            <input type="number" class="form-control" id="hoursWorked" placeholder="Enter hours worked" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="upload" class="form-label">Upload Supporting Document:</label>
                            <input type="file" class="form-control" id="upload" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">Submit Claim</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<audio id="background-music" loop>
    <source src="~/NewFolder/background-music.mp3" autoplay loop>
        Your browser does not support the audio element.
</audio>

    <!-- JavaScript for music playback -->
    <script>
        function askForMusic() {
            let playMusic = confirm("Would you like some music while you log a claim?");
            let audio = document.getElementById("background-music");
            audio.volume = 0.5;

            if (playMusic) {
                audio.play();
            } else {
                audio.pause();
            }
        }

        window.onload = function () {
            askForMusic();
        };
    </script>