<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCSPrototype</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCSPrototype.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">CMCS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <!-- Conditional logic to show the correct dashboard based on user role, to be further used in later versions -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Admin/Dashboard">Admin Dashboard</a>
                            </li>
                        }
                        else if (User.IsInRole("Lecturer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Lecturer/Dashboard">Lecturer Dashboard</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CMCSPrototype - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <audio id="background-music" loop>
    <source src="~/NewFolder/background-music.mp3" autoplay loop>
        Your browser does not support the audio element.
</audio>

    <!-- JavaScript for music playback -->
    <script>
        function askForMusic() {
            let playMusic = confirm("Would you like some music while you log a claim?");
            let audio = document.getElementById("background-music");

            if (playMusic) {
                audio.play();
            } else {
                audio.pause();
            }
        }

        window.onload = function () {
            askForMusic();
        };
    </script>
</body>
</html>
